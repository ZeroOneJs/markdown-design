{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "**/vite.config.*",
    "vitest.*",
    "packages/*/cypress.config.*",
    "packages/**/.vitepress/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo"
  }
}
